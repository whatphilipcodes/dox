---
import DownloadSection from '../components/react/DownloadSection';
import Basic from '../layouts/Basic.astro';
import MarkdownWrapper from '../components/MarkdownWrapper.astro';

import * as markdown from '../content/download.md';
const { Content, frontmatter } = markdown;

import { SITE_TITLE, GITHUB_URL } from '../consts';
---

<Basic title={frontmatter.title} description={frontmatter.description}>
  <article>
    {
      frontmatter.active ? (
        <MarkdownWrapper>
          <Content />
        </MarkdownWrapper>
      ) : null
    }
    <DownloadSection repository={GITHUB_URL} title={SITE_TITLE} client:load />
  </article>
</Basic>
