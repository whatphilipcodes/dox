---
import Link from './Link.astro';
import {
  SITE_AUTHOR,
  AUTHOR_URL,
  EXTERNAL_IMPRINT,
  EXTERNAL_PRIVACY,
} from '../consts';
const today = new Date();
---

<footer class='z-10 w-full items-center border-t border-neutral-600'>
  <div
    class='mx-auto flex h-fit w-full max-w-[912px] flex-row flex-wrap items-center gap-4 p-4 md:h-20'
  >
    <div
      class='flex w-fit flex-row gap-2 text-neutral-500 dark:text-neutral-600'
    >
      <div>MIT License</div>
      <div>&copy;</div>
      <div class='font-mono'>{today.getFullYear()}</div>
    </div>
    <div class='flex flex-row gap-4'>
      <Link href={AUTHOR_URL}>{SITE_AUTHOR}</Link>
      <div>/</div>
      <Link href={EXTERNAL_IMPRINT}>imprint</Link>
      <Link href={EXTERNAL_PRIVACY}>privacy</Link>
    </div>
  </div>
</footer>
