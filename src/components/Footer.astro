---
import Link from './Link.astro';
import {
  SITE_AUTHOR,
  AUTHOR_URL,
  EXTERNAL_IMPRINT,
  EXTERNAL_PRIVACY,
} from '../consts';
const today = new Date();
---

<footer
  class='z-10 flex w-full flex-row flex-wrap items-center gap-4 border-t border-neutral-600 p-4 sm:h-16'
>
  <div class='flex w-fit flex-row gap-2'>
    <div>MIT License</div>
    <div>&copy;&ThinSpace;</div>
    <div class='font-mono'>{today.getFullYear()}</div>
  </div>
  <div class='flex flex-row gap-4'>
    <Link href={AUTHOR_URL}>{SITE_AUTHOR}</Link>
    <div>/</div>
    <Link href={EXTERNAL_IMPRINT}>imprint</Link>
    <Link href={EXTERNAL_PRIVACY}>privacy</Link>
  </div>
</footer>
