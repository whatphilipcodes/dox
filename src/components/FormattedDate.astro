---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  datetime={date.toISOString()}
  class='flex flex-row gap-2 text-nowrap font-mono text-neutral-400 dark:text-neutral-600'
>
  {
    date
      .toLocaleDateString('de-de', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
      })
      .split('.')
      .map((part) => <div>{part}</div>)
  }
</time>
