---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  datetime={date.toISOString()}
  class='text-nowrap font-mono text-neutral-500 dark:text-neutral-600'
>
  {
    date
      .toLocaleDateString('de-de', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
      })
      .split('.')
      .join(' / ')
  }
</time>
