---
import FormattedDate from './FormattedDate.astro';
import { type CollectionEntry } from 'astro:content';
import { render } from 'astro:content';

interface Props {
  id?: string;
  step: CollectionEntry<'roadmap'>;
}

const { step, id } = Astro.props;
const { Content } = await render(step);
---

<div id={id} class='flex flex-row gap-4'>
  <div class='flex w-1/3 flex-col justify-between'>
    <FormattedDate date={step.data.start} />
    <FormattedDate date={step.data.due} />
  </div>
  <section class='w-full'><Content /></section>
</div>
